<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/styles.css" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10 text-white">
        <form action="/create" method="POST">
          <input
            class="block w-full px-5 py-2 rounded-md outline-none bg-zinc-800 mt-2"
            type="text"
            placeholder="Tittle Here!!"
            name="title"
          />
          <textarea
            class="mt-2 w-full rounded-md outline-none block px-5 py-2 bg-zinc-800 resize-none"
            name="details"
            id=""
            placeholder="Write the text here!!"
            
          ></textarea>
          <input
            class="mt-2 bg-blue-600 px-5 py-2 rounded-md cursor-pointer"
            type="submit"
            value="Create Task"
          />
        </form>
      </div>
      <div class="tasks p-10 flex gap-3 flex-wrap text-white">
        <% if(files.length > 0){ %> 
          <% files.forEach((val)=>{ %>

        <div class="m-w-72 task  px-3 py-4 bg-zinc-800 rounded-md">
          <h1 class="tex-white text-3xl tracking-tighter"><%= val %></h1>
          <a href="" class="text-blue-500 inline-block mt-3">Read more.</a>
        </div>

        <% }) %>
      <% }else{ %>
        <h3 class="mt-3 text-zinc-300">No Task Yet.</h3>
        <%} %>
      </div>
    </div>
    <script src="/javascripts/script.js"></script>
  </body>
</html>
